{
    "name": "sierratecnologia/payment-php",
    "type": "library",
    "keywords": [
        "SierraTecnologia",
        "sitec",
        "api",
        "sdk",
        "payment processing",
        "api"
    ],
    "homepage": "https://sierratecnologia.com.br",
    "license": "MIT",
    "authors": [
        {
            "name": "Sierra Tecnologia",
            "email": "contato@sierratecnologia.com.br",
            "homepage": "https://sierratecnologia.com.br",
            "role": "Organizer"
        }
    ],
    "require": {
        "php": ">=5.4.0",
        "ext-curl": "*",
        "ext-json": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^5.0",
        "phpunit/phpunit": "^9.3",
        "psalm/plugin-laravel": "^1.2",
        "vimeo/psalm": "^3.11"
    },
    "scripts": {
       "psalm": "vendor/bin/psalm",
       "test": "vendor/bin/phpunit",
       "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
       "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes",
       "check-style": "phpcs -p --standard=PSR12 src --extensions=php",
       "fix-style": "phpcbf -p --standard=PSR12 src --extensions=php"
   },
    "autoload": {
        "psr-4": {
            "SierraTecnologia\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": [
                "laravel/cashier"
            ]
        }
    }
}
